@model MateriaModel
@{
    ViewData["Title"] = "Confirmação de exclusão de matérias";
}
<div class=" text-center">
    <h3>Realmente deseja apagar a matéria @Model.NomeMateria?</h3>
</div>
<a class="btn btn-primary d-block" role="button" asp-controller="Home" asp-action="Index">Cancelar exclusão</a>
<br />
<a class="btn btn-danger d-block" role="button" asp-controller="Home" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>